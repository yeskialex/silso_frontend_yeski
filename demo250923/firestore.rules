rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and query users collection for ID duplicate checks (no authentication required)
    match /users/{userId} {
      allow read, list: if true; // Public read access for duplicate checks and queries
      allow write: if request.auth != null; // Write requires authentication
    }
    
    // Allow guests to read community content (posts, comments, communities)
    match /communities/{communityId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
      
      // Allow reading posts within communities
      match /posts/{postId} {
        allow read, list: if true; // Public read access for guests
        allow write: if request.auth != null; // Write requires authentication
      }
    }
    
    match /posts/{postId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
      
      // Allow reading comments within posts
      match /comments/{commentId} {
        allow read, list: if true; // Public read access for guests
        allow write: if request.auth != null; // Write requires authentication
      }
    }
    
    match /comments/{commentId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    // Allow guests to read content collections (using actual collection names)
    match /todayquestions/{questionId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /todayquestion_answers/{answerId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /search_analytics/{searchId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /post_comments/{commentId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /silso_magazine_posts/{magazineId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /announcements/{announcementId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /faqs/{faqId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    // Court prototype collections (read-only for guests)
    match /courtSessions/{sessionId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    match /courtCases/{caseId} {
      allow read, list: if true; // Public read access for guests
      allow write: if request.auth != null; // Write requires authentication
    }
    
    // All other collections require authentication for both read and write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}